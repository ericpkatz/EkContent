<script type="text/javascript">
    tinymce.init({
        selector: ".richText",
        plugins: [
        "advlist autolink lists link image charmap print preview anchor",
        "searchreplace visualblocks code fullscreen",
        "insertdatetime media table contextmenu paste"
    ],
        toolbar: "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"
    });
</script>


    }

    <script>
        $(function () {
            $("button[data-href]").click(function () {
                window.document.location = $(this).attr("data-href");
                return false;
            });
            $("button[data-action],a[data-action]").click(function () {
                var form = $("<form method='post' />");
                form.attr("action", $(this).attr("data-action"));
                $("body").append(form);
                form.submit();
                return false;
            });
            $("button[data-action-post]").click(function () {
                var form = $(this).parents("form");
                form.attr("action", $(this).attr("data-action-post"));
                form.submit();
                return false;
            });
            $(".alert-info").css("opacity", 0).animate(
            { opacity: 1.0 },
            function () {
                var that = $(this);
                var fn = function () {
                    that.animate({ "opacity": 0 },
                        function () {
                            $(this).hide("slow");
                        }
                    );
                }
                setTimeout(fn, 1000);
            }
        );
        });
</script>
</head>
<body>
    <div class="container" id="wrap">

@if (TempData["message"] != null)
{
    <div class="alert alert-info">
    @TempData["message"]
    </div>
}

         @RenderBody()
    </div>
    <br clear="all" />
    <div id="footer">
    <div class="container">
      @{int homePageId = ((EKContent.web.Models.Services.PageService)ViewBag.Service).GetHomePage().Id;}


      @foreach (var page in ((EKContent.web.Models.Services.PageService)ViewBag.Service).GetNavigation().Where(p=> p.Id == homePageId || p.ParentId == homePageId))
      {
          <div style="padding-right:20px;float: left;font-size:smaller;">
        @Html.ActionLink(page.Title, "Index", "Home", new { pageTitle = page.PagePath() }, null)
        </div>
      }

</div>
      </div>
<script type="text/javascript" src="http://assets.pinterest.com/js/pinit.js"></script>
</body>
</html>
