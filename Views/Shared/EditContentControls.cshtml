@model  EKContent.web.Models.ViewModels.ContentWrapper
@using EKContent.web.Models.ViewModels;
@{

}
@if (Roles.IsUserInRole("Admin") && Model.EditMode)
{
    <div class="btn-group">
        <button data-href="@Url.Action("EditContent", new { Idx = Model.Idx, Mdx = Model.Mdx, pageId = Model.Page.Id }) " class="btn">
            <i class="icon-pencil"></i>Update Content</button>
         <button class="btn dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span></button>
        <ul class="dropdown-menu">
            <li>
        <a  data-toggle="modal" href="#delete-content">
            <i class="icon-trash"></i>Delete Content</a>
            </li>
        </ul>
    </div> 
    <div id="delete-content" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h3 id="myModalLabel">
                Warning!</h3>
        </div>
        <div class="modal-body">
            <p>
                Are you sure you want to delete this content?</p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">
                Cancel</button>
            <button class="btn btn-primary" data-action="@Url.Action("DeleteContent", new { Idx = Model.Idx, Mdx = Model.Mdx, pageId = Model.Page.Id })">
                Delete</button>
        </div>
    </div>
    <br clear="all" />  
}