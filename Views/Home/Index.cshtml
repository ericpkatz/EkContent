@model EKContent.web.Models.ViewModels.HomeIndexViewModel
@{
    ViewBag.Title = Model.Page.Title;
    ViewBag.SiteTitle = Model.Site.Title;
}
<script>
    $(function () {
        $(".delete").click(function () {
            var form = $(this).parents("form");
            form.attr("action", this.href);
            form.submit();
            return false;
        });
    });
</script>
@Html.Partial("Nav")
@if (Roles.IsUserInRole("Admin"))
{
    <div class="control-group">
        <button data-href="@Url.Action("EditPage", new { pageId = Model.Page.Id })" class="btn">
            Edit Page <i class="icon-wrench"></i>
        </button>
        <button data-href="@Url.Action("EditPage", new { parentId = Model.Page.Id })" class="btn">
            <i class="icon-plus"></i>Add Page
        </button>
        @if (Model.CanDelete())
        {
            <button data-action="@Url.Action("DeletePage", new { id = Model.Page.Id })" class="btn btn-danger">
                <i class="icon-trash"></i>Delete Page
            </button>    
        }
    </div>
}

<ul class="breadcrumb">
    @for (var i = 0; i < Model.PagePathList().Count; i++ )
    {
        <li @(Model.PagePathList().Count - 1== i?"class=active" : String.Empty)><a href="@Url.Action("Index", new { id = Model.PagePathList()[i].Id })">@Model.PagePathList()[i].Title</a> @if (Model.PagePathList().Count - 1 != i)
                                                                                                                                                              {<span class="divider"></span>}</li>
    }
</ul>

@if(Model.ShowChildPages()){
    <ul class="nav nav-pills">
    @foreach (var page in Model.ChildPages())
    {
        <li>@Html.ActionLink(page.Title, "Index", new {id = page.Id })</li>
    }
    </ul>
}
@{int Mdx = 0;}
@foreach (var module in Model.Page.Modules)
{
    if (Roles.IsUserInRole("Admin"))
    {
    <button data-href="@Url.Action("EditContent", new { Idx = -1, Mdx = Mdx, pageId = Model.Page.Id })" class="btn">
        <i class="icon-plus"></i>Create Content</button>
    }
    int Idx = 0;
    foreach (var item in module.Content)
    {
    <h4>@item.Title</h4>
    
        if (Roles.IsUserInRole("Admin"))
        {
    <div class="control-group">
        <button data-href="@Url.Action("EditContent", new { Idx = Idx, Mdx = Mdx, pageId = Model.Page.Id }) " class="btn">
            <i class="icon-wrench"></i>Update Content</button>
        <button data-action="@Url.Action("DeleteContent", new { Idx = Idx, Mdx = Mdx, pageId = Model.Page.Id })" class="btn btn-danger">
            <i class="icon-trash"></i>Delete Content</button>
    </div> 
        }
    <div>@Html.Raw(ViewBag.Service.RenderImages(item.Body))</div>
        Idx++;
    }

    Mdx++;
}
