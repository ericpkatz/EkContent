@model EKContent.web.Models.ViewModels.ImageListViewModel

@{
    ViewBag.Title = "List";
}

@Html.Partial("Nav", Model.NavigationModel)
<h2>Images</h2>

        <button data-href="@Url.Action("Create", new { pageId = Model.NavigationModel.Page.Id })" class="btn">
            <i class="icon-plus"></i>Add Image
        </button>
<table class="table">
@foreach (var image in Model.Images)
{
    <tr>
        <td>@image.Title</td>
        <td>@image.FileName</td>
        <td><button data-href="@Url.Action("Create", new { pageId = Model.NavigationModel.Page.Id, id = image.Id })" class="btn">
            Edit <i class="icon-wrench"></i>
        </button></td>
        <td>
            <button data-action="@Url.Action("Delete", new { pageId = Model.NavigationModel.Page.Id, id = image.Id })" class="btn btn-danger">
                <i class="icon-trash"></i>Delete
            </button> 
        </td>
    </tr>
}
</table>