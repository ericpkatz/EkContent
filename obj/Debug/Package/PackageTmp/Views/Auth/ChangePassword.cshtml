@model EKContent.web.Models.ViewModels.PasswordChangeViewModel

@{
    ViewBag.Title = "ChangePassword";
}

@Html.ValidationSummary()

@Html.Partial("Nav", Model.NavigationModel)
<h3>Login</h3>
@using (Html.BeginForm("ChangePassword", "Auth", FormMethod.Post, new { @class="well"}))
{
    @Html.HiddenFor(m=>m.NavigationModel.Page.Id)
    <div class="control-group">
    @Html.LabelFor(m => m.OldPassword)
    @Html.TextBoxFor(m => m.OldPassword)
    @Html.ValidationMessageFor(m => m.OldPassword)
    </div>
    
    <div class="control-group">
    @Html.LabelFor(m => m.NewPassword)
    @Html.TextBoxFor(m => m.NewPassword)
    @Html.ValidationMessageFor(m => m.NewPassword)
    </div>
    
    
    
    <button type="submit" value="save" class="btn-primary">Save</button>
    <button data-href=@Url.Action("Index", new { id = Model.NavigationModel.Page.Id })>Cancel</button>
    
}