@model EKContent.web.Models.ViewModels.ImageCreateViewModel

@{
    ViewBag.Title = "Create Image";
}
@Html.Partial("Nav", Model.NavigationModel)
<h2>Create Image</h2>
@using (Html.BeginForm("Create", "Image", FormMethod.Post, new { @class = "well", enctype = "multipart/form-data"}))
{
    @Html.HiddenFor(m => m.Image.Id);
    @Html.HiddenFor(m => m.Image.FileName);                                    
    @Html.HiddenFor(m => m.NavigationModel.Page.Id)
    <div class="control-group">
    @Html.LabelFor(m => m.Image.Title)
    @Html.TextBoxFor(m => m.Image.Title)
    @Html.ValidationMessageFor(m => m.Image.Title)
    </div>
    <div class="control-group">
    <label for="image-input">Upload Image</label>
    <input type="file" name="image-input" id="image-input" />
    </div>    

    <button type="submit" value="save" class="btn-primary">Save</button>
    <button data-href=@Url.Action("List", new { id = Model.NavigationModel.Page.Id })>Cancel</button>
    
}